<div class="row">
  <div class="col m6 offset-m3 center">
    <h5>Sign In</h5>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-field">
        <%= f.email_field :email, id: "email", class: "validate", placeholder: "Email" %>
      </div>

      <div class="input-field">
        <%= f.password_field :password, id: "email", autocomplete: "off", class: "validate", placeholder: "Password" %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">Sign In</button>
      <%= link_to "Forget Password", new_user_password_path, class: "btn waves-effect waves-light" %>
    <% end %>
  </div>
</div>

