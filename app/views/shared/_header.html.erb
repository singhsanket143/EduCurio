          <% else %>
            <!-- Dropdown Trigger -->
            <li><a class="dropdown-trigger valign-wrapper" href="" data-activates="dropdown1">
              <%= image_tag avatar_url(current_user), class: "cirle responsive-image" %>&nbsp;
              <%= current_user.name %><i class="material-icons right">arrow_drop_down</i></a>
            </li>
          <% end %>
        </ul>
        <ul class="side-nav" id="mobile-demo">
          <li><a href="#">Courses</a></li>
          <li><a href="#">Courses</a></li>
          <% unless user_signed_in? %>
            <li><%= link_to "Sign In", new_user_session_path %></li>
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <% else %>
            <!-- Dropdown Trigger -->
            <li><a class="dropdown-trigger valign-wrapper" href="" data-activates="dropdown2">
              <%= image_tag avatar_url(current_user), class: "cirle responsive-image" %>&nbsp;
              <%= current_user.name %><i class="material-icons right">arrow_drop_down</i></a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>